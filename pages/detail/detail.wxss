/* pages/detail/detail.wxss */
.container{
  padding-top: 0;
  padding: 0 30rpx;
}
.device-header{
  position: relative;
  width: 100%;
  box-sizing: border-box;
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 15px;
  top: -10px;
}

.logo-img{
  width: 100px;
  height: 34px;
  opacity: 0.3;
}

.info-wrap{
  padding: 20px 20px 20px 10px;
  float: left;
  width: 100%;
  box-sizing: border-box;
}

.info-item{
  position: relative;
  display: inline-block;
  width: 50%;
  font-size: 25rpx;
  box-sizing: border-box;
  height: 50px;
  margin-bottom: 10px;
}

.info-label{
  position: absolute;
  top: 0;
  display: block;
  color: #666;
  font-size: 30rpx;
}

.info-content{
  position: absolute;
  display: block;
  top: 20px;
  font-size: 35rpx;
  margin-top: 20rpx;
}

.tabs{
  padding: 10px;
}

.tab-item{
  position: relative;
  display: inline-block;
  margin-right: 20px;
}

.select-pad{
  position: absolute;
  width: 100%;
  height: 6px;
  bottom: 0;
  left: 0;
  background-color: #33658a;
  border-radius: 3px;
}

.setting{
  box-sizing: border-box;
  padding: 20rpx 10rpx;
}

.title{
  display: block;
  font-size: 30rpx;
  margin-bottom: 10px;
}

.title.bold{
  font-weight: bold;
}

.section{
  position: relative;
  margin-bottom:  40rpx;
}

.section-title{
  font-size: 25rpx;
  margin-bottom: 4px;
}

.section-input{
  border-radius: 55rpx;
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0rpx 0rpx 10rpx #cecece;
}

.submit{
  width: 100%;
  background-color:#33658a;
  color: #ffffff;
  font-size: 30rpx;
  letter-spacing: 10rpx;
  border-radius: 55rpx;
  box-shadow: 0rpx 0rpx 10rpx #cecece;
  margin-top: 100rpx;
  transition: .3s;
}

.submit:active{
  transform: scale(0.99);
  filter: brightness(110%);
}


.wifiBtn{
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  height: 100%;
  font-size: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 20rpx;
  z-index: 1000;
  border-radius: 0 55rpx 55rpx 0 ;
  background-color: #33658a;
  color: #ffffff;
}

.command-btn{
  display: inline-block;
  font-size: 14px;
  margin-right: 6px;
  margin-bottom: 6px;
}

.response-content{
  background-color: #333;
  color: white;
  width: 100%;
  border-radius: 4px;
}