.loading>.loading-img{
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1;
  position: absolute;
background: linear-gradient(145deg, #7a9bd8, #92b8ff);
box-shadow:  20px 20px 60px #7492cc,
             -20px -20px 60px #9cc6ff;

}

.logo-img{
  width: 100rpx;
  height: 100rpx;
}

@keyframes living {
  0%{
    transform: scale(1);
    opacity: 0.5;
  }
  100%{
    transform: scale(5);
    opacity: 0;
  }
}


.loading>.loading-item{
  position: absolute;
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
  z-index: -1;
  left: 0;
  bottom: 0;
  background-color: #88acf0;
  animation: living 3s linear infinite;
  box-shadow: 0rpx 0rpx 20rpx 0rpx #013086;
}

.loading>.loading-item:nth-child(3){
  animation-delay: 2s;
}


.loading>.loading-item:last-child{
  animation-delay: 1s;
}


.loading-text{
  color: #ffffff;
  margin-top: 50rpx;
  font-weight: 500;
}





.state{
  font-size: 30rpx;
}




.pi-list{
  margin-top: 30rpx;
}

.pi-item{
  box-sizing: border-box;
  width: 100%;
  height: 200rpx;
  padding: 30rpx 30rpx;
  background-color: #f6f7fb;
  border-radius: 8px;
  box-shadow: 5rpx 5rpx 20rpx #0000003f;
  margin-bottom: 20rpx;
  transition: all 0.1s ease-out;
  position: relative;
}


.logo{
  position: absolute;
  z-index: 1;
  top: 0;
  bottom: 0;
  right: 50rpx;
  width: 100rpx;
  height: 100rpx;
  margin: 50rpx 0;
  opacity: .8;
}

.pi-item:active{
  filter: brightness(90%);
  box-shadow: 5rpx 5rpx 20rpx #00000056;
  transform: scale(0.99)
}

.pi-name{
  font-size: 50rpx;
}

.pi-id{
  display: block;
  font-size: 24rpx;
  margin-top: 15rpx;
}



.slogan{
  position: fixed;
  bottom: 20px;
  left: 0;
  width: 100%;
  height: 25px;
  font-size: 26rpx;
  text-align: center;
  opacity: 0.5;
}

.manual{
  font-weight: bold;
  text-decoration: underline;
}

.btn-chat{
  width: 200rpx;
  padding: 10rpx 30rpx;
  font-size: 30rpx;
  background-color: #013086;
  border-radius: 100rpx;
  text-align: center;
  color: #ffffff;
  margin-top: 100rpx;
  box-shadow: 5rpx 5rpx 10rpx #00000031;
}