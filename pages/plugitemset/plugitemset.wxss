/* pages/plugitemset/plugitemset.wxss */
.container{
    padding: 30rpx;
    
}

.name{
    color: #333333;
    font-size: 40rpx;
    font-weight: bold;
}

.row{
    display: flex;
    flex-direction: column;
    margin-bottom: 10rpx;
}

.row-text{
    margin-top: 30rpx;
    font-size: 30rpx;
}

.text{
    background-color: #ebebeb;
    padding: 10rpx 20rpx;
    border-radius: 10rpx;
    margin-top: 15rpx;
    border-radius: 30rpx;
}

.text-msg{
    background-color: #ebebeb;
    padding: 10rpx 20rpx;
    border-radius: 10rpx;
    margin-top: 15rpx;
    max-height: 200rpx;
    overflow: hidden;
    box-sizing: border-box;
    border-radius: 30rpx;
}

.text-msg>textarea{
    width: 100%;
}

.words{
    display: flex;
    flex-wrap: wrap;
}
.words-item{
  display: inline-block;
  padding:5rpx 20rpx;
  background-color: #33658a;
  color: #ffffff;
  margin-right: 10rpx;
  margin-top: 10rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.words-item:last-child{
    background-color: #d8dbe7;
    color: #ffffff;
}

.icon-small{
    margin-left: 20rpx;
}

.btnview{
    display: flex;
    justify-content: space-between;
    margin-top: 30rpx;
}

.btnview>.row{
    justify-content: center;
}

switch{
    margin-top: 20rpx;
}

.submit{
  width: 100%;
  background-color:#33658a;
  color: #ffffff;
  font-size: 30rpx;
  letter-spacing: 10rpx;
  border-radius: 55rpx;
  box-shadow: 0rpx 0rpx 10rpx #cecece;
  margin-top: 100rpx;
  transition: .3s;
}

.submit:active{
  transform: scale(0.99);
  filter: brightness(110%);
}

.submitDelete{
  background-color:#f13514;
}


.input-page{

    padding: 20rpx;
    width: 100vh;
    overflow: hidden;
    position: fixed;
    bottom: 20rpx;
    left: 0;
    background-color: #eff2f4;

}

.input-page>.text{
    width: 515rpx !important;
    min-width: 515rpx !important;
    float: left;
    background-color: #ffffff;
    margin-top: 0;
    height: 50rpx;
}

.input-page .submit{
    width: 150rpx !important;
    min-width: 150rpx !important;
    float: left;
    margin: 0;
    margin-left: 20rpx;
}



