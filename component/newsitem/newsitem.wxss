.news-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
  color: #333333;
}
.image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
  box-shadow: 5rpx 5rpx 5rpx #68686833;
}

.content {
  background-color: #ffffff;
  width: 500rpx;
  border-radius: 10rpx;
  margin: 0 30rpx;
  position: relative;
}

.content::before {
  content: "";
  position: absolute;
  border: 20rpx solid transparent;
  left: -30rpx;
  width: 0;
  height: 0;
  border-right-color: #ffffff;
  top: 15rpx;
}

swiper {
  height: 800rpx;
}

swiper-item {
  overflow: scroll;
}

.content .list-item {
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}

.content .item {
}

.content .item:last-child {
  border: none;
}

.over-text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item .img {
  width: 100%;
  border-radius: 10rpx;
  box-shadow: 5rpx 5rpx 5rpx #eeeeee;
}

.item .text {
  flex: 6;
  box-sizing: border-box;
  overflow: hidden;
}

.item .text {
  font-size: 26rpx;
}
.item .text .author {
  font-size: 22rpx;
  color: #555555;
  margin: 10rpx 0 20rpx;
}

.title span {
  margin-left: 10rpx;
  background-color: #6898f1;
  color: white;
  padding: 0 10rpx;
  font-size: 20rpx;
  border-radius: 10rpx;
  display: inline-block;
}

.item .isPlay {
  flex: 1;
}
.abs {
  font-size: 24rpx;
}
